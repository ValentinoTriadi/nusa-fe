{
  "singleQuote": true,
  "arrowParens": "always",
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "endOfLine": "auto",
  "importOrder": [
    "^@/core/(.*)$",
    "^@/app/api/(.*)$",
    "^@/components/(.*)$",
    "^@/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ]
}
